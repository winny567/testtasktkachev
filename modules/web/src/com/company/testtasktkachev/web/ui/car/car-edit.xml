<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://carEdit.caption"
        focusComponent="form"
        messagesPack="com.company.testtasktkachev.web.ui.car">
    <data>
        <instance id="carDc"
                    class="com.company.testtasktkachev.entity.Car" > 
            <view   extends="_local"/>
            <loader/>
        </instance>
        
    </data>
    
    <dialogMode height="600"
                width="800"/>
<layout expand="editActions" spacing="true">
    
        

<form id="form" dataContainer="carDc">
<column width="350px">
	
	<textField id="nameField" property="name"/>
	
	<dateField id="issueDateField" property="issueDate"/>
	
	<textField id="priceField" property="price"/>
	
	<lookupField id="carTypeField" property="carType"/>
	
</column>
</form>

        
        
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
